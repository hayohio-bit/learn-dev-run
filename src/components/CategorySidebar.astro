---
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");
const categories = [
  ...new Set(
    allPosts.map((post) => post.data.category).filter((category) => !!category)
  ),
];

// Get current path to determine active category
const currentPath = Astro.url.pathname;
const currentCategory = currentPath.match(/\/categories\/([^/]+)/)?.[1];
---

<aside
  id="category-sidebar"
  class="w-full md:w-64 shrink-0 transition-all duration-300"
>
  <div
    class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 rounded-xl p-6 sticky top-24 border border-gray-200 dark:border-gray-700 shadow-sm"
  >
    <!-- Sidebar Header with Toggle -->
    <div class="flex items-center justify-between mb-4">
      <h2
        class="text-xl font-bold text-gray-900 dark:text-gray-100 flex items-center gap-2"
      >
        <svg
          class="w-5 h-5 text-blue-600 dark:text-blue-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
          ></path>
        </svg>
        Categories
      </h2>
      <button
        id="sidebar-toggle"
        class="md:hidden p-1 rounded hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
        aria-label="Toggle Sidebar"
      >
        <svg
          id="sidebar-icon-open"
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 9l-7 7-7-7"></path>
        </svg>
        <svg
          id="sidebar-icon-close"
          class="w-5 h-5 hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 15l7-7 7 7"></path>
        </svg>
      </button>
    </div>

    <!-- Search Filter -->
    <div id="sidebar-content" class="space-y-4">
      <div class="relative">
        <input
          type="text"
          id="category-search"
          placeholder="Search categories..."
          class="w-full px-4 py-2 pl-10 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all"
        />
        <svg
          class="w-4 h-4 absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>

      <!-- Category List -->
      <ul class="space-y-2" id="category-list">
        <li class="category-item" data-category="all">
          <a
            href="/blog"
            class={`flex items-center justify-between px-4 py-2.5 rounded-lg transition-all duration-200 ${
              !currentCategory
                ? "bg-blue-600 text-white shadow-md"
                : "text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700"
            }`}
          >
            <span class="flex items-center gap-2">
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                ></path>
              </svg>
              All Posts
            </span>
            <span
              class={`text-sm px-2 py-0.5 rounded-full ${
                !currentCategory
                  ? "bg-blue-500 text-white"
                  : "bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-300"
              }`}
            >
              {allPosts.length}
            </span>
          </a>
        </li>
        {
          categories.map((category) => {
            const count = allPosts.filter(
              (post) => post.data.category === category
            ).length;
            const isActive = currentCategory === category;
            return (
              <li class="category-item" data-category={category.toLowerCase()}>
                <a
                  href={`/categories/${category}`}
                  class={`flex items-center justify-between px-4 py-2.5 rounded-lg transition-all duration-200 ${
                    isActive
                      ? "bg-blue-600 text-white shadow-md"
                      : "text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700"
                  }`}
                >
                  <span class="flex items-center gap-2">
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                      />
                    </svg>
                    {category}
                  </span>
                  <span
                    class={`text-sm px-2 py-0.5 rounded-full ${
                      isActive
                        ? "bg-blue-500 text-white"
                        : "bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-300"
                    }`}
                  >
                    {count}
                  </span>
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>
</aside>

<script>
  // Sidebar toggle functionality
  const sidebarToggle = document.getElementById("sidebar-toggle");
  const sidebarContent = document.getElementById("sidebar-content");
  const iconOpen = document.getElementById("sidebar-icon-open");
  const iconClose = document.getElementById("sidebar-icon-close");

  // Load sidebar state from localStorage
  const sidebarState = localStorage.getItem("sidebarOpen");
  const isMobile = window.innerWidth < 768;

  if (isMobile && sidebarState === "false") {
    sidebarContent?.classList.add("hidden");
    iconOpen?.classList.add("hidden");
    iconClose?.classList.remove("hidden");
  }

  sidebarToggle?.addEventListener("click", () => {
    const isHidden = sidebarContent?.classList.contains("hidden");

    if (isHidden) {
      sidebarContent?.classList.remove("hidden");
      iconOpen?.classList.remove("hidden");
      iconClose?.classList.add("hidden");
      localStorage.setItem("sidebarOpen", "true");
    } else {
      sidebarContent?.classList.add("hidden");
      iconOpen?.classList.add("hidden");
      iconClose?.classList.remove("hidden");
      localStorage.setItem("sidebarOpen", "false");
    }
  });

  // Category search functionality
  const searchInput = document.getElementById(
    "category-search"
  ) as HTMLInputElement;
  const categoryItems = document.querySelectorAll(".category-item");

  searchInput?.addEventListener("input", (e) => {
    const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();

    categoryItems.forEach((item) => {
      const category = item.getAttribute("data-category") || "";

      if (category.includes(searchTerm)) {
        item.classList.remove("hidden");
      } else {
        item.classList.add("hidden");
      }
    });
  });
</script>
