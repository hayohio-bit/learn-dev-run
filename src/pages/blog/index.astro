---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import CategorySidebar from "../../components/CategorySidebar.astro";

const posts = (await getCollection("blog")).sort((a, b) => {
  // 먼저 날짜로 정렬 (최신순)
  const dateDiff = b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
  if (dateDiff !== 0) return dateDiff;
  // 같은 날짜면 파일명 역순으로 정렬 (최신 파일이 위로)
  return b.id.localeCompare(a.id);
});
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <Header />
    <main
      class="w-full max-w-6xl mx-auto px-4 py-8 flex flex-col md:flex-row gap-8"
    >
      <CategorySidebar />

      <section class="flex-1">
        <div class="mb-8">
          <h1 class="text-2xl font-bold mb-1">All Posts</h1>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            {posts.length}개의 아티클
          </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            posts.map((post) => (
              <article>
                <a href={`/blog/${post.id}/`} class="group block no-underline">
                  {/* Image */}
                  {post.data.heroImage && (
                    <div class="mb-4 overflow-hidden rounded-lg bg-gray-100 dark:bg-gray-800">
                      <Image
                        width={400}
                        height={225}
                        src={post.data.heroImage}
                        alt=""
                        class="w-full aspect-video object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                  )}

                  {/* Category */}
                  {post.data.category && (
                    <div class="mb-2">
                      <span class="text-xs font-medium text-blue-600 dark:text-blue-400">
                        {post.data.category}
                      </span>
                    </div>
                  )}

                  {/* Title */}
                  <h2 class="text-base font-bold text-gray-900 dark:text-gray-100 mb-2 line-clamp-2 leading-snug group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                    {post.data.title}
                  </h2>

                  {/* Description */}
                  <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2 leading-relaxed mb-3">
                    {post.data.description}
                  </p>

                  {/* Date */}
                  <div class="text-xs text-gray-500 dark:text-gray-500">
                    <FormattedDate date={post.data.pubDate} />
                  </div>
                </a>
              </article>
            ))
          }
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
